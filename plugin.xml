<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="net.process-one.boxcar-phonegap"
    version="1.0.0">

    <name>BoxcarPlugin</name>
	<author>Pawel Chmielowski</author>
	
	<description>
		Boxcar push platfrom access plugin for Android and iOS.
	</description>

	<license>MIT</license>
	
	<js-module src="Boxcar.js" name="Boxcar">
		<clobbers target="Boxcar" />
	</js-module>

	<engines>
		<engine name="cordova" version=">=3.1.0" />
	</engines>	
	
	<!-- android -->
	<platform name="android">
		<config-file target="res/xml/config.xml" parent="/*">
			<plugin name="Storage" value="org.apache.cordova.Storage"/>
		</config-file>
	</platform>
	<dependency id="cordova-plugin-device"/>
	<dependency id="phonegap-plugin-push" url="https://github.com/boxcar/phonegap-plugin-push#2.3.3+" commit="2.3.3+"/>
</plugin>
